<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="point">

	<update id="updatePoint">
	UPDATE TBL_USER 
	   SET UPOINT = UPOINT + #{point} 
	 WHERE UID = #{uid}
	
	</update>


</mapper>